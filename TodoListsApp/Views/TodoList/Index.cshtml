@model IEnumerable<TodoList>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="header">

        <div id="date"></div>
    </div>

    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Todo List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="TodoList" asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i> &nbsp;Add New</a>
        </div>
    </div>


    <table class="table table-bordered">
        <thead>
            <tr>
                <th>List Content</th>
                <th>Schedule</th>
                <th>Priority</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ListContent</td>
                    <td>@item.Time</td>
                    <td>@item.Priority</td>
                    <td>
                        <div class="btn-group-sm" role="group">
                            <a asp-controller="TodoList" asp-action="Edit" asp-route-id="@Encryption.encrypt(@item.Id.ToString())" class="btn btn-primary"> <i class="bi bi-pencil-square"></i>&nbsp; Edit</a>
                            <a asp-controller="TodoList" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"> <i class="bi bi-trash"></i>&nbsp; Delete</a>

                        </div>
                    </td>
                </tr>

            }

        </tbody>
    </table>


</div>

@section scripts{
    <script>
        const dateElement = document.getElementById("date");
        const options = { weekday: 'long', month: 'short', day: 'numeric' };
        const today = new Date();

        dateElement.innerHTML = today.toLocaleDateString("en-Us", options);
    </script>
}